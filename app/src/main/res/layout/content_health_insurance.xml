<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.policyboss.healthinsurance.HealthInsuranceActivity"
    tools:showIn="@layout/activity_health_insurance">


    <Spinner
        android:id="@+id/spSumAssured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="@dimen/gap"
        android:background="@drawable/spinner_bg"
        android:dropDownWidth="match_parent"
        android:paddingLeft="30dp"></Spinner>

    <Spinner
        android:layout_marginTop="@dimen/gap"
        android:id="@+id/spCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spSumAssured"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:background="@drawable/spinner_bg"
        android:paddingLeft="30dp"></Spinner>

    <Spinner
        android:layout_marginTop="@dimen/gap"
        android:id="@+id/spCoverFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_below="@+id/spCover"
        android:background="@drawable/spinner_bg"
        android:paddingLeft="30dp"></Spinner>

    <Spinner
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:id="@+id/spCoverForKids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spCoverFor"
        android:layout_marginTop="@dimen/gap"
        android:background="@drawable/spinner_bg"
        android:paddingLeft="30dp"
        android:visibility="gone"></Spinner>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:text="CONTINUE"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/background" />

</RelativeLayout>
