<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/VehicleDtlsWrapper"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            android:layout_marginTop="0dp"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:text="Vehicle Details"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue">

            <EditText
                android:id="@+id/etVehicleDtls"
                style="@style/EditTextStyle"
                android:drawableLeft="@drawable/ic_people_white"
                android:hint="Vehicle Details" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/FueltypeWrapper"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            android:layout_marginTop="0dp"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:text="Vehicle Details"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue">

            <EditText
                android:id="@+id/etFueltype"
                style="@style/EditTextStyle"
                android:drawableLeft="@drawable/ic_people_white"
                android:hint="Fuel Type" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/RtoWrapper"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            android:layout_marginTop="0dp"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:text="Vehicle Details"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue">

            <EditText
                android:id="@+id/etRTO"
                style="@style/EditTextStyle"
                android:drawableLeft="@drawable/ic_people_white"
                android:hint="RTO Name" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ManufactYearrapper"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_margin="8dp"
            android:layout_marginTop="0dp"
            android:clipToPadding="false"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:text="Vehicle Details"
            app:hintTextAppearance="@style/TextAppearence.TextInputLayout.Blue">

            <EditText
                android:id="@+id/etManufactYear"
                style="@style/EditTextStyle"
                android:drawableLeft="@drawable/ic_people_white"
                android:hint="Manufacture Year" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Is your car details correct?" />

            <Switch
                android:id="@+id/carSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap"
            android:background="@color/colorPrimaryDark"
            android:text="Continue" />


    </LinearLayout>

</LinearLayout>
