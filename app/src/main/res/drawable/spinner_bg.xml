<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>

                    <solid android:color="@color/icons"></solid>
                    <padding
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="16dp"
                        android:top="8dp" />
                    <corners android:radius="2dp"></corners>
                    <stroke android:width="0.5dp"
                        android:color="@color/icons"></stroke>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/drop_down_arrow" />
            </item>
        </layer-list>
    </item>

</selector>