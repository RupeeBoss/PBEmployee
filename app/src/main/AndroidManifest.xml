<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.policyboss">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".navigationview.HomeActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".carinsurance.CarInsuranceActivity"
            android:label="@string/title_activity_car_insurance"
            android:parentActivityName=".navigationview.HomeActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.policyboss.navigationview.HomeActivity" />
        </activity>
        <activity
            android:name=".carinsurance.RenewalCarActivity"
            android:label="@string/title_activity_renewal_car"
            android:parentActivityName=".carinsurance.CarInsuranceActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.policyboss.carinsurance.CarInsuranceActivity" />
        </activity>
        <activity
            android:name=".carinsurance.CarVarientDetailsActivity"
            android:label="@string/title_activity_car_varient_details"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".carinsurance.CarAdditionalDetailsActivity"
            android:label="@string/title_activity_car_additional_details"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".carinsurance.CarDetailsActivity"
            android:label="@string/title_activity_car_details"
            android:parentActivityName=".carinsurance.CarInsuranceActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.policyboss.carinsurance.CarInsuranceActivity" />
        </activity>
        <activity
            android:name=".carinsurance.FastLaneCarDetails"
            android:label="@string/title_activity_fast_lane_car_details"
            android:parentActivityName=".carinsurance.CarInsuranceActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.policyboss.carinsurance.CarInsuranceActivity" />
        </activity>
        <activity
            android:name=".quotegenerate.QuoteGenerateActivity"
            android:label="@string/title_activity_quote_generate"
            android:parentActivityName=".carinsurance.CarDetailsActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.policyboss.quotegenerate.QuoteGenerateActivity" />
        </activity>
        <activity
            android:name=".carinsurance.PopUpCardQuoteActivity"
            android:label="@string/title_activity_pop_up_card_quote"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".carinsurance.PopUpPremiumActivity"
            android:label="@string/title_activity_pop_up_premium"
            android:theme="@style/Theme.AppCompat.Dialog"></activity>
    </application>

</manifest>